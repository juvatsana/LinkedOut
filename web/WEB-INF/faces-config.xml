<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.validate}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/onepageOwner.xhtml?userId=#{loginBean.idUser}</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.validate}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/inscription.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/onepage.xhtml?userId=#{loginBean.idUser}</from-view-id>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/inscription.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{inscriptionBean.saveUser}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/formation.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{inscriptionBean.saveUser}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/inscription.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/onepageOwner.xhtml</from-view-id>      
        <navigation-case>
            <to-view-id>/onepageOwner.xhtml?userId=#{loginBean.idUser}#profile</to-view-id>        
            <redirect/>
        </navigation-case>           
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/onepageOwner.xhtml</from-view-id>
        
        <navigation-case>
            <to-view-id>/onepageOwner.xhtml?userId=#{loginBean.idUser}#skill</to-view-id>        
            <redirect/>
        </navigation-case>
            
    </navigation-rule>
    
    
    <navigation-rule>
        <from-view-id>/formation.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/experience.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/langage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/interest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/experience.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/formation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/interest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/langage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/interest.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/experience.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/formation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/langage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/langage.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/formation.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/experience.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/interest.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
    <managed-bean>
        <managed-bean-name>formationBean</managed-bean-name>
        <managed-bean-class>fr.umlv.temp.FormationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>CvBean</managed-bean-name>
        <managed-bean-class>fr.umlv.bean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>/onepage.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/research.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
